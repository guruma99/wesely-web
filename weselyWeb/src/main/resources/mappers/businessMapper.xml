<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.wesely.dao.BusinessDAO">

	<!-- 저장하기 : 회원 가입 -->
	<insert id="insert" parameterType="businessVO">
		insert into bmember
		(bno, bname, bdate)
		values
		(bmember_id_seq.nextval, #{bno}, #{bname}, #{bdate})
	</insert>
	
	<!-- 삭제하기 : 회원 탈퇴 -->
	<delete id="delete" parameterType="businessVO">
		delete from bmember where bno=#{bno}
	</delete>
	
	
	<!-- 동일한 사업자등록번호 개수세기 : 사업자등록번호 중복 확인 -->
	<select id="selectCountByBno" parameterType="string" resultType="int">
		select count(*) from bmember where bno=#{bno}
	</select>
	
	
	<!-- 1개얻기 : 사업자등록번호-->
	<select  id="selectByBno" parameterType="string" resultType="businessVO">
		select * from bmember where bno=#{bno}
	</select>
	
	<!-- 1개 얻기 : 대표자 성명 -->
	<select id="selectByBname" parameterType="string" resultType="businessVO">
		select * from bmember where bname=#{bname}
	</select>
	
	
</mapper>